.container
  h1 {{ course.title }}
  .row
    .col-md-6
      p.lead(ng-show="course.featured") Featured
      p.lead Published on {{ course.published | date }}
    .col-md-6
      .card.bg-light.border-secondary
        .card-header.bg-secondary Tags
        .card-body
          div(ng-repeat="tag in course.tags") {{ tag }}